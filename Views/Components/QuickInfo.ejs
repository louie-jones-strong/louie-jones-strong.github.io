<% if (QuickInfoData.Skills) { %>
<!-- skills used -->
<div class="quickSkills">

	<% if (!QuickInfoData.HideSkillTitle && QuickInfoData.Skills.length > 0) { %>
		<h4 class="center reveal fromLeft">Skills Used:</h4>
	<% }%>

	<div class="quickInfoHolder delayRevealChildren center">

		<%
			for (let i = 0; i < QuickInfoData.Skills.length; i++)
			{
				let skillKey = QuickInfoData.Skills[i]
				let icon = PageData.Icons[skillKey];
				%>

				<div class="quickInfo reveal fromLeft">

					<%- include('Picture', {ImgData: {
						Path:icon.IconPath,
						ClassList: "icon " + icon.ClassList,
						Alt: icon.Label + " Logo",
						IsSvg: true
					}}); %>

					<h5><%=icon.Label%></h5>
				</div>

			<%}
		%>
	</div>
</div>
<% }%>