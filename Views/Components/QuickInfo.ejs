<div class="quickInfoHolder delayRevealChildren center">

	<% if (QuickInfoData.TimeSpent) { %>
		<!-- time spent -->
		<div class="quickInfo">
			<i class="material-icons">schedule</i>
			<h5><%= QuickInfoData.TimeSpent %></h5>
		</div>
	<% }%>

	<% if (QuickInfoData.StartDate) { %>
		<!-- time spent -->
		<div class="quickInfo">
			<i class="material-icons">date_range</i>
			<h5><%= QuickInfoData.StartDate %></h5>
		</div>
	<% }%>

	<% if (QuickInfoData.NumPeople) { %>
		<!-- number of people -->
		<% if (QuickInfoData.NumPeople == 1) { %>
			<div class="quickInfo">
				<i class="material-icons">person</i>
				<h5>Solo</h5>
			</div>
		<% }else if (QuickInfoData.NumPeople == 2){ %>
			<div class="quickInfo">
				<i class="material-icons">people</i>
				<h5>2</h5>
			</div>
		<% }else { %>
			<div class="quickInfo">
				<i class="material-icons">groups</i>
				<h5><%= QuickInfoData.NumPeople %></h5>
			</div>
		<% }%>
	<% }%>

	<% if (QuickInfoData.Awards) { %>
		<!-- number of people -->
		<% if (QuickInfoData.Awards == 1) { %>
			<div class="quickInfo">
				<i class="material-icons">workspace_premium</i>
				<h5>Award Winning</h5>
			</div>
		<% }else if (QuickInfoData.Awards > 1){ %>
			<div class="quickInfo">
				<i class="material-icons">workspace_premium</i>
				<h5>Multi Award Winning</h5>
			</div>
		<% }else { %>
			<div class="quickInfo">
				<i class="material-icons">workspace_premium</i>
				<h5><%= QuickInfoData.Awards %></h5>
			</div>
		<% }%>
	<% }%>
</div>



