<!doctype html>
<html lang="en">

<head>
	<!-- shared common Head Logic -->
	<%- include('../../Components/Head', {
		PageData: PageData,
		HeadData: {
			Title: "Xmas Cards",
			Description: "",
			Url: "https://louie-jones-strong.github.io/cards/xmas/",
			Thumbnail: "https://louie-jones-strong.github.io/Public/Assets/cards/xmas/card1",
		}
	}); %>

	<!-- extra links if needed -->
	<link rel="stylesheet" type="text/css" href="<%=PageData.PathToRoot%>Public/css/Optinal/Carousel.css">
	<link rel="stylesheet" type="text/css" href="<%=PageData.PathToRoot%>Public/css/Optinal/Gallery.css">
</head>

<body class="dark">

	<!-- Shared common loader -->
	<%- include('../../Components/Loader'); %>
	<div class="content">
		<!-- shared common header -->
		<%- include('../../Components/AccessibilityHelper'); %>
		<div class="background">
			<!-- shared common header -->
			<%- include('../../Components/Header'); %>

			<!-- cover image slide show -->
			<div class="slide-holder">
				<div class="slide">
					<%- include('../../Components/Picture', {ImgData: {
						Path:"../../Public/Assets/cards/xmas/card1",
						ClassList: "",
						Alt:"First Xmas Render",
						LoadingType: "eager"
					}}); %>
				</div>
			</div>
			<script src="<%=PageData.PathToRoot%>Public/JavaScript/Carousel.js"></script>

			<div class="centeredFrame">
				<h1 class="center reveal fromBottom">Christmas Cards</h1>


				<div class="gallery glass reveal">
					<div class="glass reveal">
						<%- include('../../Components/Picture', {ImgData: {
							Path:"../../Public/Assets/cards/xmas/card1",
							ClassList: "expandable",
							Alt:""
						}}); %>
					</div>
					<div class="glass reveal">
						<%- include('../../Components/Picture', {ImgData: {
							Path:"../../Public/Assets/cards/xmas/card1_Large",
							ClassList: "expandable",
							Alt:"larger aspect ratio for cards"
						}}); %>
					</div>
				</div>


				<hr class="gap">
				<hr class="gap">
				<a href="/"><h3 class="center reveal fromBottom">Check Out My Portfolio</h3></a>

			</div>




			<!-- Shared common footer -->
			<%- include('../../Components/Footer'); %>
			<%- include('../../Components/Expandable'); %>
		</div>

		<script src="<%=PageData.PathToRoot%>Public/JavaScript/AnimateOnAppear.js"></script>
	</div>
</body>
</html>